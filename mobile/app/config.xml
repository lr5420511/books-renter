<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.books" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>借书宝</name>
    <description>
        这是一个借书应用。
    </description>
    <author email="liaorui5420511@gmail.com" href="https://github.com/lr5420511">
        Alex liao
    </author>
    <content src="index.html" />
    <icon src="./www/favicon.ico" platform="android" width="57" height="57" density="mdpi" />
    <preference name = "SplashScreen" value = "screen" />
    <preference name = "SplashScreenDelay" value = "3000" />
    <preference name = "SplashMaintainAspectRatio" value = "false" />
    <preference name = "ShowSplashScreenSpinner" value = "false"/>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
